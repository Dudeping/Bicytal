@model Bicytal.Models.User

@{
    ViewBag.Title = "EidtMyDetail";
}
<link href="~/Content/css/PersonalDetails.css" rel="stylesheet" />

<div id="header">
    <div class="head_portrait">
        <img src="~/Content/img/7.jpg" width="150px" height="150px" />
    </div>
    <div class="operation">
        <ul>
            <li>
                <img class="img1" src="~/Content/img/ooopic_1473567040.png" width="10px" height="10px" />
                <a href="#">Modify personal data</a>
            </li>
            <li>
                <img class="img2" src="~/Content/img/ooopic_1473567033.png" width="10px" height="10px" />
                <a href="#detailed_narcissism">View details</a>
            </li>
            <li>
                <img class="img1" src="~/Content/img/ooopic_1473567187.png" width="10px" height="10px" />
                <a href="/Users/MyPurchases">Purchase records</a>
            </li>
        </ul>
    </div>
</div>
<div id="wrap">
    <div id="detailed_narcissism">
        <h1>View personal details</h1>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.UserName)
            <button><input type="submit" value="complete" width="10px" /></button>
            <table>
                <tr class="box1">
                    <th>Last name：</th>
                    <td>@Html.EditorFor(model => model.GName, new { htmlAttributes = new { placeholder = "Last name" } })</td>
                </tr>
                <tr class="box1">
                    <th>Family name：</th>
                    <td>@Html.EditorFor(model => model.SName, new { htmlAttributes = new { placeholder = "Family name" } })</td>
                </tr>
                <tr>
                    <th>Street address：</th>
                    <td>@Html.EditorFor(model => model.Address, new { htmlAttributes = new { placeholder = "Street address" } })</td>
                </tr>

                <tr class="box1">
                    <th>State or region：</th>
                    <td>@Html.EditorFor(model => model.State, new { htmlAttributes = new { placeholder = "State or region" } })</td>
                </tr>
                <tr>
                    <th>Zip code：</th>
                    <td>@Html.EditorFor(model => model.PostCode, new { htmlAttributes = new { placeholder = "PostCode" } })</td>
                </tr>
                <tr class="box1">
                    <th>Telephone：</th>
                    <td>@Html.EditorFor(model => model.Mobile, new { htmlAttributes = new { placeholder = "Telephone" } })</td>
                </tr>
            </table>
        }
        
        
    </div>
</div>