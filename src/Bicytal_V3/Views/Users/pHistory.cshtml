@model IEnumerable<Bicytal.Models.Purchase>
@{
    ViewBag.Title = "pHistory";
}


<!DOCTYPE html>
<html>

<head>
    <title>Purchase history</title>

    <link rel="shortcut icon" href="favicon.ico">
    <link href="~/Content/User/css/bootstrap.min.css?v=3.3.6" rel="stylesheet">
    <link href="~/Content/User/css/font-awesome.css?v=4.4.0" rel="stylesheet">
    <link href="~/Content/User/css/plugins/footable/footable.core.css" rel="stylesheet">

    <link href="~/Content/User/css/animate.css" rel="stylesheet">
    <link href="~/Content/User/css/style.css?v=4.1.0" rel="stylesheet">

</head>

<body class="gray-bg">
    <div class="wrapper wrapper-content animated fadeInRight">

        <div class="row">
            <div class="col-sm-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Purchase history</h5>

                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">

                        <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="10">
                            <thead>
                                <tr>
                                    <th data-toggle="true">Username</th>
                                    <th>Models</th>
                                    <th>Buying time</th>
                                    <th data-hide="all">Models</th>
                                    <th data-hide="all">Username</th>
                                    <th data-hide="all">Effective date</th>
                                    <th data-hide="all">Effective time length</th>
                                    <th data-hide="all">Price</th>
                                    <th data-hide="all">Time buying</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.UserName.UserName</td>
                                        <td>@item.Type.Type</td>
                                        <td>@item.PTime</td>
                                        <td>@item.Type.Type</td>
                                        <td>@item.UserName.UserName</td>
                                        <td>@item.StartDate</td>
                                        <td>@item.Duration</td>
                                        <td>@item.Cost</td>
                                        <td>@item.PTime</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="5">
                                        <ul class="pagination pull-right"></ul>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Content/User/js/jquery.min.js?v=2.1.4"></script>
    <script src="~/Content/User/js/bootstrap.min.js?v=3.3.6"></script>
    <script src="~/Content/User/js/plugins/footable/footable.all.min.js"></script>
    <script src="~/Content/User/js/content.js?v=1.0.0"></script>
    <script>
        $(document).ready(function() {

            $('.footable').footable();
            $('.footable2').footable();

        });
    </script>
</body>

</html>
