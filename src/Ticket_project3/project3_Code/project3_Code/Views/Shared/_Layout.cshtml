<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ticketing network</title>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="font-size:16px">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                    @*Login User*@
                    @if (Context.User.IsInRole("User"))
                    {
                        <li>@Html.ActionLink("Personal Details", "pDetail", "Users")</li>
                        <li>@Html.ActionLink("My Purchases", "pHistory", "Users")</li>
                        <li>@Html.ActionLink("Make Purchase", "MakePurchase", "Users")</li>
                    }

                    @*Login Staff*@
                    @if (Context.User.IsInRole("Staff"))
                    {
                        <li>@Html.ActionLink("Manage Permits", "ManagePermits", "Staffs")</li>
                        <li>@Html.ActionLink("Plot Charts", "PlotChart", "Staffs")</li>
                    }
                    
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    
    <hr />

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Ticketing network</p>
        </footer>
    </div>
</body>
</html>