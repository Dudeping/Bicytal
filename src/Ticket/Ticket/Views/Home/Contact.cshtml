@{
    ViewBag.Title = "Contact Us";
}
<link href="~/Content/css/Contact.css" rel="stylesheet" />

<div class="wrap">
    <div class="header">
        <h1>Contact</h1>
        <div class="head-title">
            <h1>Send us an email</h1>
        </div>
    </div>

    <div class="content">
        <div class="left">
            <from>
                <input type="text" name="name" placeholder="Your name*" class="biaodan" />
                <input type="email" name="email" placeholder="Email*" class="biaodan" />
                <input type="text" name="phone" placeholder="Phone*" class="biaodan" />
                <input type="text" name="address" placeholder="Address*" class="biaodan" />
                <input type="text" name="Facebook" placeholder="Facebook*" class="biaodan" />
            </from>
        </div>
        <div class="right">
            <input type="text" name="Massage" placeholder="Your Massage" id="massage" />
        </div>
    </div>
    <div class="Send">
        <input type="submit" value="Send" />
    </div>
</div>